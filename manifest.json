{
  "manifest_version": 2,
  "name": "YouTube Comment Filter",
  "version": "1.0",
  "permissions": [
    "https://www.youtube.com/",
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
